<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    xmlns:local="Binding"
    ThemeName="Metro">
    <Grid>
        <Grid.DataContext>
            <local:TestViewModel />
        </Grid.DataContext>
        <StackPanel>
            <TextBlock Text="{Binding SomeDate, StringFormat='dd MMM yyyy'}" />
            <TextBlock Text="{Binding SomeDate, StringFormat='HH:mm'}" />
        </StackPanel>
    </Grid>
</Application>