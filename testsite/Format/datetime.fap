<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    xmlns:local="Format"
    ThemeName="Metro">
    <StackPanel>
        <StackPanel.DataContext>
            <local:TestViewModel />
        </StackPanel.DataContext>
        <TextBlock Text="{Binding Path=Now, StringFormat='{0: HH:mm:ss}'}" />
        <TextBlock Text="{Binding Path=Now, StringFormat='{0: dd MMM yyyy}'}" />
    </StackPanel>
</Application>