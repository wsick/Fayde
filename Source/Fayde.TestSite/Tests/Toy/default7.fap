<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    ThemeName="Metro">
    <StackPanel Background="AntiqueWhite" Orientation="Horizontal">
        <Border BorderBrush="Black" Background="White" BorderThickness="3" CornerRadius="5, 5, 20, 20">
            <TextBlock Margin="10">
                <TextBlock.Inlines>
                    <Run FontWeight="Bold" FontSize="14" Text="Hi! I am a TextBlock. " />
                    <Run FontStyle="Italic" Foreground="Red" Text="This is red italic text. " />
                    <LineBreak />
                    <Underline Foreground="Blue">
                        <Run Text="How about adding some blue?" />
                    </Underline>
                </TextBlock.Inlines>
            </TextBlock>
        </Border>
        <Border BorderBrush="Black" Background="White" BorderThickness="3" CornerRadius="5, 5, 20, 20">
            <TextBlock Margin="10">
                <TextBlock.Inlines>
                    <Run FontWeight="Bold" FontSize="14" Text="Hi! I am a TextBlock. " />
                    <Run FontStyle="Italic" Foreground="Red" Text="This is red italic text. " />
                    <LineBreak />
                    <Underline Foreground="Blue">
                        <Run Text="How about adding some blue?" />
                    </Underline>
                </TextBlock.Inlines>
            </TextBlock>
        </Border>
    </StackPanel>
</Application>