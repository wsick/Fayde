<Application
    xmlns="http://schemas.wsick.com/fayde"
    xmlns:x="http://schemas.wsick.com/fayde/x"
    xmlns:controls="lib:Fayde.Controls"
    ThemeName="Default">
    <Grid>
        <StackPanel>
            <controls:NumericUpDown x:Name="ProgressValue" DecimalPlaces="0" Increment="1" Value="50" />
            <ProgressBar Value="{Binding ElementName=ProgressValue, Path=Value}" Height="20" Width="200" Margin="0,5" />
        </StackPanel>
    </Grid>
</Application>